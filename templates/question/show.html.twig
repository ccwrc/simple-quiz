{% block title %}Question{% endblock %}

{% block body %}
    <h1>Question</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ question.id }}</td>
        </tr>
        <tr>
            <th>Content</th>
            <td>{{ question.content }}</td>
