{% extends 'base.html.twig' %}

{% block title %}Answer{% endblock %}

{% block body %}
    <h1>Answer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ answer.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ answer.content }}</td>
            </tr>
            <tr>
                <th>IsCorrect</th>
                <td>{{ answer.isCorrect ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('answer_index') }}" class="btn btn-outline-primary">back to list</a>

    <a href="{{ path('answer_edit', {'id': answer.id}) }}" class="btn btn-outline-primary">edit</a>

    <br/><br/>
    {{ include('answer/_delete_form.html.twig') }}
{% endblock %}